<%- layout("./layouts/boilerplate.ejs") %>
<div class="row mt-3 row-cols-lg-4 row-cols-md-3 row-cols-sm-1 row-cols-1">
    <% for( listing of listings ) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_img">
                <div class="card-img-overlay"></div>
            <div class="card-body">
                <h6 class="card-title"><b><%= listing.title %></b></h6>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><%= listing.location %></li>
                <li class="list-group-item"><%= listing.country %></li>
                <li class="list-group-item" id="price"><b><%= listing.price.toLocaleString('en-IN', {
                    maximumFractionDigits: 2,
                    style: 'currency',
                    currency: 'INR'
                }); %></b></li>
            </ul>
        </div>
        </a>
    <% } %>
</div>