    <script>
        let elementClicked = document.querySelector(".gallary");


        elementClicked.addEventListener("click", (e) => {
            e.preventDefault(); // Prevent the default behavior
            let url  = "http://localhost:8080/";

            // Check if the user clicked on <a> inside <li>
            if (e.target.localName === "a" || e.target.localName === "i") {
                filter = e.target.parentElement.classList[3];
            }
            window.location.href = `${url}listings/category/${filter}`;
        });

        //functionality for the border-bottom when clicked on nav-item;
        const navItems = document.querySelectorAll('.nav-item li');

        // Check if there is a stored active item
        const storedActiveItem = localStorage.getItem('activeNavItem');
        if (storedActiveItem) {
            const activeItem = document.querySelector(`.${storedActiveItem}`);
            if (activeItem) {
                activeItem.classList.add('active');
            }
        }

        navItems.forEach(item => {
            item.addEventListener('click', function () {
                // Remove 'active' class from all items
                navItems.forEach(navItem => navItem.classList.remove('active'));

                // Add 'active' class to the clicked item
                item.classList.add('active');

                // Store the clicked item in localStorage
                localStorage.setItem('activeNavItem', item.classList[1]);
            });
        });
    </script>

